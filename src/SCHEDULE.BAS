            I$ = GetKeyPress$
            If UCase$(I$) = "A" Then I$ = "10"
            I = Val(I$)
        Loop Until I >= 0 And I <= 10

        Select Case I

            Case 1
                playerOpt = playerOpt + 1
                If playerOpt > 3 Then playerOpt = 0

            Case 2
                gameLoc = 1 + gameLoc
                If gameLoc > 2 Then gameLoc = 1

