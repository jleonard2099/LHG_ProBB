DATA SUNDAY,MONDAY,TUESDAY,WEDNESDAY,THURSDAY,FRIDAY,SATURDAY
FOR I = 1 TO 7: READ DY$(I): NEXT

DATA ATLANTA,BOSTON,CHARLOTTE,CHICAGO,CLEVELAND,DALLAS,DENVER
DATA DETROIT,GOLDEN STATE,HOUSTON,INDIANA,LA CLIPPERS, LA LAKERS,MIAMI
DATA MILWAUKEE,MINNESOTA,NEW JERSEY,NEW YORK,ORLANDO,PHILADELPHIA,PHOENIX
DATA PORTLAND,SACRAMENTO,SAN ANTONIO,SEATTLE,UTAH,WASHINGTON
FOR I = 1 TO 27: READ TM$(I): NEXT

YR% = 88

OPEN "NBA8889.TXT" FOR INPUT AS #1

10 INPUT #1, MO%
	IF MO% = 1 THEN YR% = 89
	INPUT #1, DY%
	INPUT #1, V$
	INPUT #1, H$
	INPUT #1, X$

20 FOR X = 1 TO 27
	IF V$ = TM$(X) THEN V% = X: GOTO 30
	NEXT
	END

30 PRINT "VIS="; V$, V%

40 FOR X = 1 TO 27
	IF H$ = TM$(X) THEN H% = X: GOTO 50
	NEXT
	PRINT "COULD NOT FULLY PROCESS "; X$
	PRINT "DO YOU WISH TO CONTINUE"
	' HAVE LOOP TO READ NEXT LINE OR EXIT OUT
	END

50 PRINT "HOM="; H$, H%
	IF LEN(X$) = 4 THEN HR% = VAL(LEFT$(X$, 1)) + 12: MIN% = VAL(MID$(X$, 3, 2))
	IF LEN(X$) = 5 THEN HR% = VAL(LEFT$(X$, 2)) + 12: MIN% = VAL(MID$(X$, 4, 2))
	IF HR% = 24 THEN HR% = 12
	NG%(15) = HR% * 100 + MIN%
	'WRITE THE GAME HERE
	GP% = GP% + 1: PRINT "TOTAL="; GP%
	NG%(8) = 3
	YN$(0) = "89": YN$(1) = "89"
	NG%(0) = V%: NG%(1) = H%: NG%(2) = 1
	NG%(3) = 1: ' THREE POINT SHOT
	NG%(4) = 0: NG%(5) = 0: NG%(6) = 2: NG%(7) = 0
	NG%(9) = 0: NG%(10) = 0: NG%(11) = 0: NG%(13) = 0
	HR% = INT(NG%(15) / 100)
	MIN% = NG%(15) - HR% * 100
	TM% = HR% * 60 + MIN%
	NG%(12) = INT(TM% / 30 - 18)
	NG%(14) = 4
	NG%(17) = MO%
	NG%(18) = YR%
	NG%(16) = DY%
OPEN "NBA88-89.SCD" FOR RANDOM AS #2 LEN = 48
	FOR X = 0 TO 18
	FIELD #2, X * 2 AS X$, 2 AS Q$(X + 1), 48 - 2 - 2 * X AS X$
	NEXT
	FIELD #2, 38 AS X$, 2 AS Q$(22), 2 AS Q$(23), 3 AS Q$(20), 3 AS Q$(21)
	FOR X = 0 TO 18: LSET Q$(X + 1) = MKI$(NG%(X)): NEXT
	FOR X = 0 TO 1: LSET Q$(20 + X) = YN$(X): NEXT
	LSET Q$(22) = MKI$(VS%): LSET Q$(23) = MKI$(HS%)
	PUT #2, GP%
CLOSE 2
	GOTO 10
	END
